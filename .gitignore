#######################################
# PROJET : Site boucherie (PHP / Admin)
# Objectif : Sécurité + propreté GitHub
#######################################

#######################################
# === DEPENDANCES PHP (Composer) ===
#######################################
/vendor/*
/vendors/*

#######################################
# === CONFIGURATION SENSIBLE ===
# Contient identifiants BDD, clés, etc.
# Ne doit JAMAIS être sur GitHub
#######################################
/config/app.php
/app/Config/core.php
/app/Config/database.php

#######################################
# === FICHIERS TEMPORAIRES (CACHE) ===
# Générés automatiquement par CakePHP
#######################################
/tmp/cache/models/*
!/tmp/cache/models/empty

/tmp/cache/persistent/*
!/tmp/cache/persistent/empty

/tmp/cache/views/*
!/tmp/cache/views/empty

#######################################
# === SESSIONS ===
# Données utilisateurs temporaires
#######################################
/tmp/sessions/*
!/tmp/sessions/empty

#######################################
# === FICHIERS DE TEST ===
#######################################
/tmp/tests/*
!/tmp/tests/empty

#######################################
# === LOGS ===
# Journaux d’erreurs et d’accès
#######################################
/logs/*
!/logs/empty

#######################################
# === UPLOADS ADMIN ===
# Images produits, fichiers privés
#######################################
/uploads/

#######################################
# === OUTILS LOCAUX (DEV) ===
#######################################
.vscode/
.idea/
.DS_Store
Thumbs.db

#######################################
# === ENVIRONNEMENT ===
#######################################
.env
*.log
